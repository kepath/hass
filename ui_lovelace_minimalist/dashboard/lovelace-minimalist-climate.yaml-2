      - type: "horizontal-stack"
        cards:
          - type: "vertical-stack"
            cards:
              - type: "custom:button-card"
                template: "edge"
              - type: "custom:thermostat-card"
                entity: "climate.nest_bottom_floor"
                title: "Nest Ground Floor"
              - type: "custom:apexcharts-card"
                all_series_config:
                  stroke_width: 2
                  type: "area"
                series:
                  - entity: "sensor.nest_bottom_floor_temperature"
                    color: "red"
                  - entity: "climate.nest_bottom_floor"
                    attribute: "temperature"
                    type: "line"
                    color: "yellow"
                    unit: "°C"
                apex_config:
                  legend:
                    show: false
                graph_span: "24h"
                header:
                  show: true
                  title: "Nest Ground Floor 24h"
          - type: "vertical-stack"
            cards:
              - type: "custom:button-card"
                template: "edge"
              - type: "custom:thermostat-card"
                entity: "climate.nest_middle_floor"
                title: "Nest First Floor"
              - type: "custom:apexcharts-card"
                all_series_config:
                  stroke_width: 2
                  type: "area"
                series:
                  - entity: "sensor.nest_middle_floor_temperature"
                    color: "red"
                  - entity: "climate.nest_middle_floor"
                    attribute: "temperature"
                    type: "line"
                    color: "yellow"
                    unit: "°C"
                apex_config:
                  legend:
                    show: false
                graph_span: "24h"
                header:
                  show: true
                  title: "Nest First Floor 24h"

      - type: "custom:apexcharts-card"
        yaxis:
          - id: "temperature" # identification name of the first y-axis
            decimals: 0
            apex_config:
              tickAmount: 4
          - id: "humidity" # identification name of the second y-axis
            opposite: true # make it show on the right side
            decimals: 0
            apex_config:
              tickAmount: 4
        all_series_config:
          stroke_width: 2
          type: "area"
        series:
          - entity: "sensor.nest_middle_floor_temperature"
            name: "Temperature"
            color: "red"
            yaxis_id: "temperature"
            statistics:
              type: "mean"
          - entity: "sensor.nest_middle_floor_humidity"
            name: "Humidity"
            color: "blue"
            yaxis_id: "humidity"
            type: "column"
            statistics:
              type: "mean"
            group_by:
              duration: "1d"
              func: "avg"
          - entity: "climate.nest_middle_floor"
            attribute: "temperature"
            name: "Target Temperature"
            color: "yellow"
            yaxis_id: "temperature"
            type: "line"
            unit: "°C"
        graph_span: "1month"
        header:
          show: true
          title: "Nest First Floor Month"
      - type: "custom:apexcharts-card"
        yaxis:
          - id: "temperature" # identification name of the first y-axis
            decimals: 0
            apex_config:
              tickAmount: 4
          - id: "humidity" # identification name of the second y-axis
            opposite: true # make it show on the right side
            decimals: 0
            apex_config:
              tickAmount: 4
        all_series_config:
          stroke_width: 2
          type: "area"
        series:
          - entity: "sensor.nest_bottom_floor_temperature"
            name: "Temperature"
            color: "red"
            yaxis_id: "temperature"
            statistics:
              type: "mean"
          - entity: "sensor.nest_bottom_floor_humidity"
            name: "Humidity"
            color: "blue"
            yaxis_id: "humidity"
            type: "column"
            statistics:
              type: "mean"
            group_by:
              duration: "1d"
              func: "avg"
          - entity: "climate.nest_bottom_floor"
            attribute: "temperature"
            name: "Target Temperature"
            color: "yellow"
            yaxis_id: "temperature"
            unit: "°C"
        graph_span: "1month"
        header:
          show: true
          title: "Nest Ground Floor Month"

      - type: "vertical-stack"
        cards:
          - type: "custom:apexcharts-card"
            all_series_config:
              stroke_width: 2
              type: "line"
            series:
              - entity: "sensor.zigbee_vibration_sensor_patio_door_temperature"
                name: "Patio Vibration"
              - entity: "sensor.zigbee_motion_sensor_middle_hallway_occupancy_temperature"
                name: "Middle Motion"
              - entity: "sensor.zigbee_motion_sensor_bed_e_temperature"
                name: "Bed E Motion"
              - entity: "sensor.zigbee_door_sensor_patio_2_temperature"
                name: "Patio 2 Contact"
              - entity: "sensor.zigbee_door_sensor_patio_1_temperature"
                name: "Patio 1 Contact"
              - entity: "sensor.zigbee_door_sensor_loft_temperature"
                name: "Loft Contact"
              - entity: "sensor.zigbee_door_sensor_garage_temperature"
                name: "Garage Contact"
              - entity: "sensor.zigbee_door_sensor_bed_c_temperature"
                name: "Bed C Contact"
              - entity: "sensor.zigbee_door_sensor_back_temperature"
                name: "Back Door Contact"
              - entity: "sensor.banbury_feels_like_temperature"
                name: "Banbury Feels Like"
            apex_config:
              chart:
                height: 400
            graph_span: "24h"
            header:
              show: false
